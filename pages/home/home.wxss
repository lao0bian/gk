/* pages/home/home.wxss */
page{
  background-color: white;
}

.container-top {
  width: 750rpx;
  font-size: 24rpx;
  background-color: white;
}

.container-top .swiper {
  width: 750rpx;
  height: 350rpx;
  margin: 5rpx 0 0;
}

.container-top .swiper swiper-item {
  margin: 0 25rpx;
  width: 700rpx;
  height: 320rpx;
}

.container-top .swiper swiper-item image {
  width: 700rpx;
  height: 320rpx;
  border-radius: 8px;
  background-color: rgb(250, 250, 250);
  box-shadow: 0rpx 1rpx 100rpx 0rpx rgb(227, 227, 227);
}


.options {
  height: 195rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-width: medium;
  border-color: #f7f7f7;  
  border-style: solid;
  
}

.opt {
  display: inline-flex;
  flex-direction: column;
  text-align: center;
  width: 25%;
  align-items: center;
  margin-top: 30rpx;
}


.option {
  width: 68rpx;
  height: 68rpx;
}

.optiontext {
  font-size: 25rpx;
  margin-top: 10rpx;
}




.container-txt{
  margin-top: 20rpx;
  
}

.container-txt text{
  margin-left: 20rpx;
  color: orange;
  font-size: 28rpx;
}
.line{
  width: 66rpx;
  height: 10rpx;
  border-radius: 20%;
  background-color: orange;
}

.container-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;


  width: 100%;
  margin-top: 30rpx;
}

.content-in{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 95%;
  height: 250rpx;

  border: 2px solid rgba(238, 238, 238, 1);
}

.content-img{
  margin-left: 20rpx;
  width: 220rpx;
  height: 160rpx;
}
.content-img image{
  width: 200rpx;
  height: 160rpx;
  
}

.content-txt{
   margin-left: 60rpx;
     width: 450rpx;
}