.tab-bar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 100rpx;
  background: #F7F7F7 ;
  display: flex;
  flex-direction: row;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: white;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 30rpx;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 40rpx;
}

.cover-image {
  width: 48rpx;
  height: 48rpx;
}

.tab-bar-item cover-view {
  margin-top: 4rpx;
  font-size: 20rpx;
}




 .centerImage {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  
  top: -13rpx;
  
} 
